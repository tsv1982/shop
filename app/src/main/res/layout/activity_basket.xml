<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:orientation="vertical"
    tools:context=".Activity.Basket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_Data_tov_Backet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="65dp"
            android:text="00.00.00"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TV_nameCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="65dp"
            android:text="name"
            android:textColor="@color/text"
            android:textSize="20dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/LV_BasketLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="общая сумма:"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TV_sum_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0000"
            android:textColor="@color/text"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnСancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient"
            android:text="отменить"
            android:textColor="@color/text"
            android:textSize="15dp" />

        <Button
            android:id="@+id/BtnBay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient"
            android:text="купить"
            android:textColor="@color/text"
            android:textSize="15dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_basket"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#F5F5F5"
            android:src="@drawable/check" />

        <TextView
            android:id="@+id/TV_backet_flo_delet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="удалить \n архив"
            android:layout_marginStart="140dp"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_1_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F5F5F5"
            android:src="@android:drawable/ic_delete"
            app:fabSize="mini" />

        <TextView
            android:id="@+id/TV_backet_flo_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="архив \n покупок"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_2_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F5F5F5"
            android:src="@android:drawable/ic_menu_info_details"
            app:fabSize="mini" />

        <TextView
            android:id="@+id/TV_backet_flo_s_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="архив \n просмотров"
            android:layout_marginStart="200dp"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_2_basket_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F5F5F5"
            android:src="@android:drawable/ic_menu_info_details"
            app:fabSize="mini" />


    </FrameLayout>


</LinearLayout>